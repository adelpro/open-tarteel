{
  "name": "open-tarteel",
  "version": "0.2.2",
  "description": "Quran streaming application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "dev:scan": "npx react-scan@latest localhost:3000",
    "dev:inspect": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache --concurrency=auto --max-warnings=0",
    "lint:fix": "eslint . --fix --cache --concurrency=auto",
    "type-check": "tsc  --noemit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky || true",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf .next node_modules"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache --concurrency=auto",
      "prettier --write"
    ],
    "*.{json,md,css}": "prettier --write"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.1.5",
    "@serwist/next": "^9.0.12",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "fuse.js": "^7.1.0",
    "gun": "^0.2020.1241",
    "jotai": "^2.11.1",
    "jotai-devtools": "^0.12.0",
    "next": "^15.4.2",
    "nodemailer": "^6.10.0",
    "nuqs": "^2.8.8",
    "react": "^19.1.0",
    "react-audio-spectrum": "^0.1.5",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-intl": "^7.1.11",
    "sanitize-html": "^2.17.0",
    "tailwind-merge": "^3.3.1",
    "wavesurfer.js": "^7.10.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/sanitize-html": "^2.16.0",
    "@types/webtorrent": "^0.110.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.2.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-playwright": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^15.4.1",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animated": "^1.1.2",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
